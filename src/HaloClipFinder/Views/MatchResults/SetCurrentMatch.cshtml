@{
    Layout = "";
}
<h3>Match Results</h3>
@foreach (var team in ViewBag.CurrentTeams)
{
    <div>
        <h4>@team[0]</h4>
        <select>
            @for (var i = 1; i < team.Count; i++)
            {
                <option value="@team[i]">@team[i]</option>
            }
        </select>
        
    </div>
}
<script>
        $("select").change(function () {
            $("#matchEvents").html("<h3>Loading medals...</h3>");
            $.ajax({
                type: "POST",
                url: '/MatchEvents/GetMatchEvents/',
                data: {"gamertag": this.value },
                datatype: 'html',
                success: function (response) {
                    $("#matchEvents").html(response);
                }
            });
        })
</script>
